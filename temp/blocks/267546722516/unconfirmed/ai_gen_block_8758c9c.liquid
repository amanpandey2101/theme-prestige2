{% doc %}
  @prompt
    generate a offer section, where offer will be splashed, i.e, Use ARSH25 Coupon to get 25% discount, for first 100 buyers only.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-offer-splash-{{ ai_gen_id }} {
    background: {{ block.settings.background_color }};
    background-image: {{ block.settings.background_gradient }};
    padding: {{ block.settings.padding_vertical }}px {{ block.settings.padding_horizontal }}px;
    text-align: center;
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-offer-splash-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    max-width: 800px;
    margin: 0 auto;
  }

  .ai-offer-splash-badge-{{ ai_gen_id }} {
    display: inline-block;
    background-color: {{ block.settings.badge_color }};
    color: {{ block.settings.badge_text_color }};
    padding: 8px 16px;
    border-radius: 20px;
    font-size: {{ block.settings.badge_font_size }}px;
    font-weight: 600;
    margin-bottom: 16px;
    text-transform: uppercase;
    letter-spacing: 1px;}

  .ai-offer-splash-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_font_size }}px;
    font-weight: 700;
    margin: 0 0 16px;
    line-height: 1.2;
  }

  .ai-offer-splash-subheading-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_font_size }}px;
    margin: 0 0 24px;
    line-height: 1.4;
  }

  .ai-offer-splash-coupon-{{ ai_gen_id }} {
    background-color: {{ block.settings.coupon_background }};
    color: {{ block.settings.coupon_text_color }};
    border: 2px dashed {{ block.settings.coupon_border_color }};
    padding: 16px 24px;
    border-radius: 8px;
    font-size: {{ block.settings.coupon_font_size }}px;
    font-weight: 700;
    letter-spacing: 2px;
    margin: 0 0 24px;
    display: inline-block;position: relative;
  }

  .ai-offer-splash-coupon-{{ ai_gen_id }}::before,
  .ai-offer-splash-coupon-{{ ai_gen_id }}::after {
    content: '';
    position: absolute;
    width: 20px;
    height: 20px;
    background-color: {{ block.settings.background_color }};
    border-radius: 50%;
    top: 50%;
    transform: translateY(-50%);
  }

  .ai-offer-splash-coupon-{{ ai_gen_id }}::before {
    left: -11px;
  }

  .ai-offer-splash-coupon-{{ ai_gen_id }}::after {
    right: -11px;
  }

  .ai-offer-splash-urgency-{{ ai_gen_id }} {
    color: {{ block.settings.urgency_color }};
    font-size: {{ block.settings.urgency_font_size }}px;
    font-weight: 600;
    margin: 0 0 24px;
  }

  .ai-offer-splash-button-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    padding: 16px 32px;
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 600;
    text-decoration: none;
    display: inline-block;
    cursor: pointer;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 1px;}

  .ai-offer-splash-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
    transform: translateY(-2px);
  }

  .ai-offer-splash-decorative-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
    z-index: 1;
  }

  .ai-offer-splash-star-{{ ai_gen_id }} {
    position: absolute;
    color: {{ block.settings.decoration_color }};
    opacity: 0.3;
  }

  .ai-offer-splash-star-{{ ai_gen_id }}:nth-child(1) {
    top: 10%;
    left: 10%;
    font-size: 24px;
  }

  .ai-offer-splash-star-{{ ai_gen_id }}:nth-child(2) {
    top: 20%;
    right: 15%;
    font-size: 18px;
  }

  .ai-offer-splash-star-{{ ai_gen_id }}:nth-child(3) {
    bottom: 15%;
    left: 15%;
    font-size: 20px;
  }

  .ai-offer-splash-star-{{ ai_gen_id }}:nth-child(4) {
    bottom: 25%;
    right: 10%;
    font-size: 16px;
  }

  @media screen and (max-width: 749px) {
    .ai-offer-splash-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_vertical | times: 0.7 }}px {{ block.settings.padding_horizontal | times: 0.7 }}px;
    }

    .ai-offer-splash-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_font_size | times: 0.8 }}px;
    }

    .ai-offer-splash-coupon-{{ ai_gen_id }} {
      font-size: {{ block.settings.coupon_font_size | times: 0.9 }}px;
      padding: 12px 20px;
    }

    .ai-offer-splash-button-{{ ai_gen_id }} {
      padding: 14px 28px;
      font-size: {{ block.settings.button_font_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-offer-splash-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-offer-splash-decorative-{{ ai_gen_id }}"><span class="ai-offer-splash-star-{{ ai_gen_id }}">★</span>
    <span class="ai-offer-splash-star-{{ ai_gen_id }}">✦</span>
    <span class="ai-offer-splash-star-{{ ai_gen_id }}">★</span>
    <span class="ai-offer-splash-star-{{ ai_gen_id }}">✧</span>
  </div>

  <div class="ai-offer-splash-content-{{ ai_gen_id }}">
    {% if block.settings.badge_text != blank %}
      <div class="ai-offer-splash-badge-{{ ai_gen_id }}">
        {{ block.settings.badge_text }}
      </div>
    {% endif %}

    {% if block.settings.heading != blank %}
      <h2 class="ai-offer-splash-heading-{{ ai_gen_id }}">
        {{ block.settings.heading }}
      </h2>
    {% endif %}

    {% if block.settings.subheading != blank %}
      <p class="ai-offer-splash-subheading-{{ ai_gen_id }}">
        {{ block.settings.subheading }}
      </p>
    {% endif %}

    {% if block.settings.coupon_code != blank %}
      <div class="ai-offer-splash-coupon-{{ ai_gen_id }}">
        {{ block.settings.coupon_code }}
      </div>
    {% endif %}

    {% if block.settings.urgency_text != blank %}
      <p class="ai-offer-splash-urgency-{{ ai_gen_id }}">
        {{ block.settings.urgency_text }}
      </p>
    {% endif %}

    {% if block.settings.button_text != blank and block.settings.button_link != blank %}
      <a href="{{ block.settings.button_link }}" class="ai-offer-splash-button-{{ ai_gen_id }}">
        {{ block.settings.button_text }}
      </a>
    {% endif %}
  </div>
</div>

