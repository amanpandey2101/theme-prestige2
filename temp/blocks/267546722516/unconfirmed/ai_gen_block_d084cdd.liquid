{% doc %}
  @prompt
    Create an eye-catching offer section banner that displays "Use ARSH25 Coupon to get 25% discount" with emphasis on "for first 99 buyers only because Arshdeep Singh has 99 wickets". The section should be visually appealing with bold text, contrasting colors, and a sense of urgency. Include customizable options for the coupon code, discount percentage, buyer limit, and promotional text.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-offer-banner-{{ ai_gen_id }} {
    background: {{ block.settings.background_color }};
    background: {{ block.settings.background_gradient }};
    padding: {{ block.settings.padding_vertical }}px {{ block.settings.padding_horizontal }}px;
    text-align: center;
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-offer-banner__content-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    max-width: 800px;
    margin: 0 auto;
  }

  .ai-offer-banner__main-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.main_text_size }}px;
    font-weight: 700;
    color: {{ block.settings.text_color }};
    margin: 0 0 {{ block.settings.text_spacing }}px 0;
    line-height: 1.2;
    text-transform: {{ block.settings.text_transform }};
  }

  .ai-offer-banner__coupon-{{ ai_gen_id }} {
    display: inline-block;
    background-color: {{ block.settings.coupon_bg_color }};
    color: {{ block.settings.coupon_text_color }};
    padding: 8px 16px;
    border-radius: 6px;
    font-weight: 800;
    font-size: {{ block.settings.coupon_text_size }}px;
    letter-spacing: 1px;
    border: 2px dashed {{ block.settings.coupon_border_color }};
    margin: 0 4px;
  }

  .ai-offer-banner__discount-{{ ai_gen_id }} {
    color: {{ block.settings.discount_color }};
    font-weight: 800;
    font-size: {{ block.settings.discount_text_size }}px;
  }

  .ai-offer-banner__urgency-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.urgency_text_size }}px;
    color: {{ block.settings.urgency_color }};
    font-weight: 600;
    margin: {{ block.settings.text_spacing }}px 0 0 0;
    text-transform: {{ block.settings.urgency_text_transform }};
  }

  .ai-offer-banner__buyer-limit-{{ ai_gen_id }} {
    color: {{ block.settings.buyer_limit_color }};
    font-weight: 800;}

  .ai-offer-banner__promotional-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.promotional_text_size }}px;
    color: {{ block.settings.promotional_color }};
    margin: {{ block.settings.text_spacing }}px 0 0 0;
    font-style: italic;
    font-weight: 500;
  }

  .ai-offer-banner__decorative-element-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    opacity: 0.1;
    z-index: 1;
    background-image: 
      radial-gradient(circle at 20% 20%, {{ block.settings.accent_color }} 2px, transparent 2px),
      radial-gradient(circle at 80% 80%, {{ block.settings.accent_color }} 2px, transparent 2px),
      radial-gradient(circle at 40% 60%, {{ block.settings.accent_color }} 1px, transparent 1px);
    background-size: 50px 50px, 60px 60px, 30px 30px;
  }

  @media screen and (max-width: 749px) {
    .ai-offer-banner-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_vertical | times: 0.7 }}px {{ block.settings.padding_horizontal | times: 0.7 }}px;
    }

    .ai-offer-banner__main-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.main_text_size | times: 0.8 }}px;
    }

    .ai-offer-banner__coupon-{{ ai_gen_id }} {
      font-size: {{ block.settings.coupon_text_size | times: 0.9 }}px;padding: 6px 12px;
    }

    .ai-offer-banner__discount-{{ ai_gen_id }} {
      font-size: {{ block.settings.discount_text_size | times: 0.8 }}px;
    }

    .ai-offer-banner__urgency-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.urgency_text_size | times: 0.9 }}px;
    }

    .ai-offer-banner__promotional-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.promotional_text_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-offer-banner-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-offer-banner__decorative-element-{{ ai_gen_id }}"></div>
  
  <div class="ai-offer-banner__content-{{ ai_gen_id }}">
    <div class="ai-offer-banner__main-text-{{ ai_gen_id }}">
      Use
      <span class="ai-offer-banner__coupon-{{ ai_gen_id }}">{{ block.settings.coupon_code }}</span>
      Coupon to get 
      <span class="ai-offer-banner__discount-{{ ai_gen_id }}">{{ block.settings.discount_percentage }}% discount</span>
    </div>
    
    <div class="ai-offer-banner__urgency-text-{{ ai_gen_id }}">
      for first 
      <span class="ai-offer-banner__buyer-limit-{{ ai_gen_id }}">{{ block.settings.buyer_limit }} buyers only</span>
    </div>
    
    {% if block.settings.promotional_text != blank %}
      <div class="ai-offer-banner__promotional-text-{{ ai_gen_id }}">
        {{ block.settings.promotional_text }}
      </div>
    {% endif %}
  </div>
</div>

